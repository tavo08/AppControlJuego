<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">

    <TextView
            android:id="@+id/jornada_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jornada"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="8dp"/>

    <EditText
            android:id="@+id/jornada_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintStart_toEndOf="@+id/jornada_text_view"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>

    <TextView
            android:id="@+id/rama_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rama"
            app:layout_constraintTop_toBottomOf="@+id/jornada_text_view"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:padding="8dp"/>

    <EditText
            android:id="@+id/rama_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/jornada_edit_text"
            app:layout_constraintStart_toStartOf="@+id/jornada_edit_text"
    />
    <TextView
            android:id="@+id/hora_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora"
            app:layout_constraintTop_toBottomOf="@+id/rama_text_view"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:padding="8dp"/>

    <EditText
            android:id="@+id/hora_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/rama_edit_text"
            app:layout_constraintStart_toStartOf="@+id/jornada_edit_text"
    />
    <TextView
            android:id="@+id/campo_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Campo"
            app:layout_constraintTop_toBottomOf="@+id/hora_text_view"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:padding="8dp"/>

    <EditText
            android:id="@+id/campo_edit_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/hora_edit_text"
            app:layout_constraintStart_toStartOf="@+id/jornada_edit_text"
    />



</androidx.constraintlayout.widget.ConstraintLayout>